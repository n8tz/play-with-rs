{
  "default": {
    "rootFolder": "App",
    "libsPath": "./packages"
  },
  "dev": {
    "rootFolder": "App",
    "libsPath": "./packages",
    "commands": {
      "server": {
        "watch": "dist/api/App.server.js",
        "run": "node --inspect=[::]:9229 ./dist/api/App.server.js -p 9701",
        "forever": true
      },
      "api": {
        "clearBefore": "dist/api",
        "run": "wpi :devApi -w"
      },
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi-dev-server :devClient --hot --host 0.0.0.0"
      }
    },
    "extend": [
      "wi-layer-dev-tools"
    ]
  },
  "prod": {
    "rootFolder": "App",
    "libsPath": "./packages",
    "commands": {
      "api": {
        "clearBefore": "dist/api",
        "run": "wpi :api"
      },
      "server": {
        "watch": "dist/api/App.server.js",
        "run": "node ./dist/api/App.server.js -p 8080",
        "forever": true
      },
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi :client"
      },
      "admin": {
        "clearBefore": "dist/admin",
        "run": "wpi :admin"
      }
    },
    "extend": [
      "wi-layer-dev-tools"
    ]
  },
  "client": {
    "rootFolder": "App",
    "libsPath": "./packages",
    "basedOn": "defaultBrowser",
    "vars": {
      "targetDir": "dist/www",
      "extractCss": true,
      "production": true,
      "DefinePluginCfg": {
        "__IS_DEV__": false,
        "__IS_ADMIN__": false,
        "__IS_SERVER__": false
      },
      "resolve": {
        "alias": {
          "material-ui": "@material-ui/core"
        }
      },
      "babelInclude": "(ansi\\-regex|strip\\-ansi)",
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      },
      "webpackPatch": {
        "mode": "production"
      }
    },
    "extend": [
      "wpi-auth",
      "wpi-forms",
      "wpi-medias",
      "wpi-mongo",
      "wi-layer-react-rs",
      "wi-layer-react-express"
    ]
  },
  "admin": {
    "rootFolder": "App",
    "libsPath": "./packages",
    "basedOn": "defaultBrowser",
    "vars": {
      "targetDir": "dist/admin",
      "extractCss": true,
      "production": true,
      "babelInclude": "(ansi\\-regex|strip\\-ansi)",
      "DefinePluginCfg": {
        "__IS_DEV__": false,
        "__IS_ADMIN__": true,
        "__IS_SERVER__": false
      },
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      },
      "resolve": {
        "alias": {
          "material-ui": "@material-ui/core"
        }
      },
      "webpackPatch": {
        "mode": "production"
      }
    },
    "extend": [
      "wpi-auth",
      "wpi-admin",
      "wpi-forms",
      "wpi-medias",
      "wpi-xsl",
      "wpi-mongo",
      "wi-layer-react-rs",
      "wi-layer-react-express"
    ]
  },
  "devClient": {
    "rootFolder": "App",
    "basedOn": "defaultBrowser",
    "libsPath": "./packages",
    "vars": {
      "DefinePluginCfg": {
        "__IS_DEV__": true,
        "__IS_ADMIN__": true,
        "__IS_SERVER__": false
      },
      "babelInclude": "(ansi\\-regex|strip\\-ansi|tui\\-image\\-editor)",
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      },
      "webpackPatch": {
        "stats": "errors-only",
        "devServer": {
          "public": "mamasound.localhost",
          "compress": true,
          "disableHostCheck": true
        },
        "resolve": {
          "alias": {
            "material-ui": "@material-ui/core"
          }
        },
        "watchOptions": {
          "aggregateTimeout": 300,
          "poll": 1000
        }
      }
    },
    "extend": [
      "wi-layer-dev-tools",
      "wpi-auth",
      "wpi-admin",
      "wpi-forms",
      "wpi-medias",
      "wpi-xsl",
      "wpi-mongo",
      "wi-layer-react-rs",
      "wi-layer-react-express"
    ]
  },
  "api": {
    "rootFolder": "App",
    "libsPath": "./packages",
    "basedOn": "defaultServer",
    "vars": {
      "targetDir": "dist/api",
      "externals": true,
      "production": true,
      "DefinePluginCfg": {
        "__IS_DEV__": false,
        "__IS_ADMIN__": true,
        "__IS_SERVER__": true
      },
      "webpackPatch": {
        "stats": "errors-only",
        "resolve": {
          "alias": {
            "material-ui": "@material-ui/core"
          }
        },
        "watchOptions": {
          "aggregateTimeout": 300,
          "poll": 1000
        }
      }
    },
    "extend": [
      "wpi-auth",
      "wpi-admin",
      "wpi-forms",
      "wpi-medias",
      "wpi-xsl",
      "wpi-mongo",
      "wi-layer-react-rs",
      "wi-layer-react-express"
    ]
  },
  "devApi": {
    "rootFolder": "App",
    "libsPath": "./packages",
    "basedOn": "defaultServer",
    "vars": {
      "targetDir": "dist/api",
      "externals": true,
      "DefinePluginCfg": {
        "__IS_DEV__": true,
        "__IS_ADMIN__": true,
        "__IS_SERVER__": true
      },
      "webpackPatch": {
        "stats": "errors-only",
        "resolve": {
          "alias": {
            "material-ui": "@material-ui/core"
          }
        },
        "watchOptions": {
          "aggregateTimeout": 300,
          "poll": 1000
        }
      }
    },
    "extend": [
      "wi-layer-dev-tools",
      "wpi-auth",
      "wpi-admin",
      "wpi-forms",
      "wpi-medias",
      "wpi-xsl",
      "wpi-mongo",
      "wi-layer-react-rs",
      "wi-layer-react-express"
    ]
  }
}
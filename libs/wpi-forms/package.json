{
  "name": "wpi-forms",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "./dist/App.server.js",
  "author": "Nathan Braun <n8tz.js@gmail.com>",
  "wpInherit": {
    "default": {
      "rootFolder": "App",
      "vars": {},
      "extend": []
    },
    "devClient": {
      "rootFolder": "App",
      "basedOn": "default",
      "vars": {
        "webpackPatch": {
          "watchOptions": {
            "aggregateTimeout": 300,
            "poll": 1000
          }
        }
      },
      "extend": []
    },
    "api": {
      "rootFolder": "App",
      "vars": {
        "externals": true,
        "webpackPatch": {
          "devtool": "inline",
          "watchOptions": {
            "aggregateTimeout": 300,
            "poll": 1000
          }
        }
      },
      "extend": []
    }
  },
  "scripts": {
    "build": "wpi&&wpi :api",
    "dev-api": "wpi :api -w",
    "docker_start": "start docker-compose up&",
    "docker_down": "docker-compose down",
    "docker_ash": "start docker-compose exec app ash -c \"cd /home/app&&ash\"&",
    "docker_restoreDb": "start docker-compose exec app ash -c \"cd /home/app&&mongorestore --uri ${mongoUrl}\"&",
    "start-dev": "wpi :api&&concurrently \"wpi-dev-server :devClient --hot --host 0.0.0.0 \" \"wpi :api -w\" \"sleep 3&&nodemon -L --watch ./dist/App.server.js --inspect=[::]:9229 ./dist/App.server.js  -p 9701\"",
    "start": "node ./dist/App.server.js  -p 8080",
    "runBrowser": "start http://localhost:8080"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "is": "^3.3.0",
    "simpl-schema": "^1.5.5",
    "uniforms": "^1.31.1",
    "uniforms-material": "^1.31.1"
  },
  "devDependencies": {
    "webpack-inherit": "^1.4.9"
  }
}
